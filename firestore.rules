rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is accessing their own data
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Users collection - users can only read/write their own profile
    match /users/{userId} {
      allow read: if isAuthenticated() && isOwner(userId);
      allow write: if isAuthenticated() && isOwner(userId);
    }

    // User analyses - users can only access their own analyses
    match /userAnalyses/{userId}/analyses/{analysisId} {
      allow read: if isAuthenticated() && isOwner(userId);
      allow write: if isAuthenticated() && isOwner(userId);
    }

    // Match analysis cache - readable by authenticated users, writable by server only
    match /matchAnalysisCache/{cacheId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only Cloud Functions can write to cache
    }

    // Demo analyses - readable by anyone (for onboarding demo), writable by server only
    match /demoAnalysis/{userId}/analyses/{analysisId} {
      allow read: if true; // Allow unauthenticated users to read demo content
      allow write: if false; // Only admins/Cloud Functions can write demo data
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
